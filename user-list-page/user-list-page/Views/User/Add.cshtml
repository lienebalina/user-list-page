@model user_list_page.Models.UserViewModel

@{
    ViewData["Title"] = "Add";
}
<h1>@ViewData["Title"]</h1>



<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Add", "User", FormMethod.Post))
                {
                        <div>
                            @Html.LabelFor(model => model.UsersViewModel.FirstName)
                        @Html.TextBoxFor(model => model.UsersViewModel.FirstName)
                        </div>
                        <div>
                        @Html.LabelFor(model => model.UsersViewModel.LastName)
                        @Html.TextBoxFor(model => model.UsersViewModel.LastName)
                        </div>
                        <div>
                        @Html.LabelFor(model => model.UsersViewModel.DateOfBirth)
                        @Html.TextBoxFor(model => model.UsersViewModel.DateOfBirth, new { type = "datetime-local" })
                        </div>
                        <div>
                        @Html.LabelFor(model => model.PhoneNumberViewModel.Number)
                        @Html.TextBoxFor(model => model.PhoneNumberViewModel.Number)
                        </div>
                        <div>
                        @Html.LabelFor(model => model.AddressViewModel.UserAddress)
                        @Html.TextBoxFor(model => model.AddressViewModel.UserAddress)
                        </div>
                    
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
                <input type="submit" value="Add Person" />
            </div>
        </div>
    </div>
</div>
